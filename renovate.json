{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:monorepos"],
  "onboarding": true,
  "onboardingConfig": {
    "extends": ["config:recommended"]
  },
  "timezone": "Asia/Kolkata",
  "prHourlyLimit": 5,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "groupName": "npm breaking updates"
    },
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "npm non-breaking updates"
    },
    {
      "groupName": "docusaurus packages",
      "matchPackageNames": ["^@docusaurus", "docusaurus-.*", "^@mdx-js"]
    },
    {
      "groupName": "react packages",
      "matchPackageNames": ["^react", "^prism-react-renderer"]
    },
    {
      "groupName": "eslint packages",
      "matchPackageNames": [
        "^eslint", 
        "^@eslint", 
        "^@docusaurus/eslint-plugin", 
        "^typescript-eslint", 
        "eslint-.*", 
        "eslint-plugin-.*",
        "^@types/eslint"
      ]
    },
    {
      "groupName": "catbee packages",
      "matchPackageNames": ["^@catbee"]
    },
    {
      "groupName": "ng catbee packages",
      "matchPackageNames": ["^@ng-catbee"]
    }
  ],
  "addLabels": ["dependency", "renovate"],
  "reviewers": ["catbee-technologies/catbee-admins"],
  "assignees": ["catbee-technologies/catbee-admins"],
  "branchPrefix": "dependency/",
  "rangeStrategy": "bump",
  "rebaseWhen": "behind-base-branch",
  "baseBranchPatterns": ["main"],
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "commitMessageLowerCase": "auto",
  "ignoreDeps": [],
  "enabledManagers": ["npm"]
}